(include_subdirs unqualified)

(rule
    (deps (source_tree .))
    (targets libvec_stubs.a dllvec_stubs.so)
    (action
        (progn
            (run cargo build -Z unstable-options --out-dir . --target-dir ../rust --release)
            (run mv libvec_stubs.so ./dllvec_stubs.so)
        )
    )
)

(library
   (name vec)
   (public_name vec)
   (self_build_stubs_archive (vec))
   (c_library_flags (-lpthread -lc -lm))
)
